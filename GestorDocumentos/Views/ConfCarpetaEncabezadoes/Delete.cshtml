@model GestorDocumentos.Models.ConfCarpetaEncabezado

@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar</h2>

<h4>¿Estás seguro que quieres eliminar esto?</h4>
<div>
    <h5>Configuración Carpeta Encabezado</h5>
    <hr />
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Areas.Descripcion, "Área", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Areas.Descripcion)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion, "Descripción", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Descripcion)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Subniveles, "Cantidad de Sub Niveles", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Subniveles)
            </div>
        </div>
    </div>
 
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            @Html.ActionLink("Página Anterior", "Index")
        </div>
    }
</div>
