@model GestorDocumentos.Models.Documento_Detalle

@{
    ViewBag.Title = "Eliminar";
}

<h2>@ViewBag.Title</h2>

<h3>¿Estás seguro que quieres eliminar esto?</h3>
<div>
    <h4>Eliminar Documento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.Areas.Descripcion, "Área", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold" })
        </dt>

        <dd class="col-md-10">
            @Html.DisplayFor(model => model.Areas.Descripcion)
        </dd>

        <dt>
            @Html.LabelFor(model => model.ConfCarpetaEncabezado.Descripcion, "Carpeta", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold" })
        </dt>

        <dd class="col-md-10">
            @Html.DisplayFor(model => model.ConfCarpetaEncabezado.Descripcion)
        </dd>

        <dt>
            @Html.LabelFor(model => model.llaveUnica, "Codificación", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold" })
        </dt>

        <dd class="col-md-10">
            @Html.DisplayFor(model => model.llaveUnica)
        </dd>

        <dt>
            @Html.LabelFor(model => model.Nombre_Ori, "Nombre de Origen", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold" })
        </dt>

        <dd class="col-md-10">
            @Html.DisplayFor(model => model.Nombre_Ori)
        </dd>

        <dt>
            @Html.LabelFor(model => model.Nombre_Des, "Nuevo Nombre", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold" })
        </dt>

        <dd class="col-md-10">
            @Html.DisplayFor(model => model.Nombre_Des)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            @Html.ActionLink("Página Anterior", "Index")
        </div>
    }
</div>
